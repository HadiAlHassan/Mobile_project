<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/gray"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Telecom Icon -->
        <ImageView
            android:id="@+id/imageViewTelecomIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Telecom Icon"
            android:src="@drawable/khadamatlogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Plan Title -->
        <TextView
            android:id="@+id/textViewPlanTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Plan Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imageViewTelecomIcon"
            app:layout_constraintTop_toTopOf="@id/imageViewTelecomIcon"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Plan Description -->
        <TextView
            android:id="@+id/textViewPlanDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Plan Description"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/textViewPlanTitle"
            app:layout_constraintTop_toBottomOf="@id/textViewPlanTitle"
            app:layout_constraintEnd_toEndOf="@id/textViewPlanTitle" />

        <!-- Plan Price -->
        <TextView
            android:id="@+id/textViewPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewTelecomIcon"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Subscribe Button -->
        <Button
            android:id="@+id/buttonRequestTelecom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subscribe"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/WhiteSmoke"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/textViewPlanPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
