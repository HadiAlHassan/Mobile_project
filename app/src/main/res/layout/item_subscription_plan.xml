<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Plan Thumbnail -->
        <ImageView
            android:id="@+id/imageViewPlanThumbnail"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Text & Button Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Plan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewPlanPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5 / month"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textViewMaxUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up to 4 users"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/buttonSubscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:textColor="@android:color/white"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/UseBlue"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
