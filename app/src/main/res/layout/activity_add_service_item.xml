<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ”² Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_icon"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="6dp"/>

        <!-- ðŸ–¼ï¸ Image Card -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/image_border"
            android:scaleType="centerCrop"
            android:contentDescription="@string/service_image"
            android:layout_marginBottom="12dp" />


        <Button
            android:id="@+id/btnUploadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:layout_marginBottom="24dp"
            android:textAllCaps="false"/>

        <!-- ðŸ“„ Label + Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_name"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/editServiceName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_rounded_bg"
            android:hint="@string/e_g_pay_wi_fi_bill"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="14sp"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/editServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_bg"
            android:hint="Enter description"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:gravity="top"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/editServicePrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_rounded_bg"
            android:hint="@string/e_g_20"
            android:inputType="numberDecimal"
            android:paddingHorizontal="16dp"
            android:textColor="#000000"
            android:layout_marginTop="6dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnSubmitService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_service"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:backgroundTint="#4B6EA9"
            android:textColor="#FFF"/>
    </LinearLayout>
</ScrollView>
