<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Telecom Recharge Service"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Provider Logo Upload -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Service Logo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageViewProviderLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewUpload"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@android:color/white"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- Telecom Company Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Telecom Company">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Bank Account -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Bank Account Number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextBankAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Service Area -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Service Area (optional)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextServiceArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Submit -->
        <Button
            android:id="@+id/buttonSubmitTelecom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Service"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/UseBlue"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
