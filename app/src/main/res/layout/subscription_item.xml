<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/subTitle"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Service Name"  android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView android:id="@+id/subPrice"
        android:text="Price: $"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView android:id="@+id/subStatus"
        android:text="Status: active"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView android:id="@+id/subDate"
        android:text="Renew: date"
        android:textSize="12sp"
        android:textColor="#777"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
</LinearLayout>
