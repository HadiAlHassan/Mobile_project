<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp"
    android:padding="12dp">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageServiceIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/textServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageServiceIcon"
            android:layout_marginStart="12dp"
            android:text="@string/service_title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageServiceIcon"
            android:layout_below="@id/textServiceName"
            android:layout_marginStart="12dp"
            android:text="@string/tvservicepriceplaceholdrr"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/buttonDeleteService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_delete"
            android:background="@android:color/transparent"
            android:contentDescription="@string/txtdeleteservice" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
