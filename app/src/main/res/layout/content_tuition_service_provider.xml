<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Tuition Provider"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- Logo Upload -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload University Logo"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:padding="4dp" />

            <ImageView
                android:id="@+id/imageViewUploadLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@android:color/white"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:elevation="4dp" />
        </FrameLayout>

        <!-- University Name -->
        <EditText
            android:id="@+id/editTextUniversityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="University Name"
            android:inputType="textCapWords" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextUniversityDetails"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Details about the university, location, type, etc."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginTop="12dp" />

        <!-- Bank Account -->
        <EditText
            android:id="@+id/editTextBankAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bank Account Number"
            android:inputType="number"
            android:layout_marginTop="12dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/buttonSaveTuitionService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Service"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/UseBlue"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
