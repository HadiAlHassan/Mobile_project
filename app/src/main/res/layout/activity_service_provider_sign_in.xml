<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username *"
        android:textSize="14sp"
        android:layout_marginTop="170dp"
        android:textColor="#555555"/>

    <EditText
        android:id="@+id/editServiceProviderUsername"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_rounded_bg"
        android:hint="e.g. Pierre Maalouf"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email *"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <EditText
        android:id="@+id/editServiceProviderEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_rounded_bg"
        android:hint="e.g. randomaddress@gmail.com"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password *"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <EditText
        android:id="@+id/editServiceProviderPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_rounded_bg"
        android:hint="e.g. aB5*j4Xb+9"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnServiceProviderSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="32dp"
        android:textAllCaps="false"
        android:backgroundTint="#4B6EA9"
        android:textColor="#FFF"/>


</LinearLayout>