<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/WhiteSmoke"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserDetails"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TableLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:padding="16dp">
    <!-- Name Fields -->
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/fname"/>
        <EditText android:id="@+id/fname" style="@style/FormInput" android:hint="Enter first name"/>
    </TableRow>
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/mname"/>
        <EditText android:id="@+id/mname" style="@style/FormInput" android:hint="Enter middle name"/>
    </TableRow>
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/lname"/>
        <EditText android:id="@+id/lname" style="@style/FormInput" android:hint="Enter last name"/>
    </TableRow>

    <!-- Contact Fields -->
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/phone"/>
        <EditText android:id="@+id/phone" style="@style/FormInput"
            android:inputType="phone"
            android:hint="Enter phone number"/>
    </TableRow>
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/address"/>
        <EditText android:id="@+id/address" style="@style/FormInput"
            android:inputType="textPostalAddress"
            android:hint="Enter address"/>
    </TableRow>

    <!-- Age Group -->
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/age"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/above"
                    android:textColor="@color/UseBlue"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/below"
                    android:textColor="@color/UseBlue"
                    android:textStyle="bold" />
            </RadioGroup>

        </LinearLayout>
    </TableRow>

    <!-- Account Credentials -->
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/username"/>
        <EditText android:id="@+id/username" style="@style/FormInput" android:hint="Choose a username"/>
    </TableRow>
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/pass"/>
        <EditText android:id="@+id/pass" style="@style/FormInput"
            android:inputType="textPassword"
            android:hint="Enter password"/>
    </TableRow>
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/pass1"/>
        <EditText android:id="@+id/pass1" style="@style/FormInput"
            android:inputType="textPassword"
            android:hint="Confirm password"/>
    </TableRow>

    <!-- Profile Image -->
    <TableRow>
        <TextView style="@style/FormLabel" android:text="@string/upload"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/img"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Image"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btnUploadIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload2"
            android:textSize="12sp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"/>
    </TableRow>

    <!-- Submit -->
    <TableRow>
        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSignUp"
            android:textColor="@color/WhiteSmoke"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/UseBlue"
            android:layout_marginTop="16dp"/>
    </TableRow>

</TableLayout>
    </ScrollView>
