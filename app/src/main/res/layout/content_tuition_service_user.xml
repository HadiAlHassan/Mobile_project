<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_tuition_fee"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <!-- University Name -->
        <EditText
            android:id="@+id/editTextUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/university_name"
            android:inputType="textCapWords" />

        <!-- Reference Number -->
        <EditText
            android:id="@+id/editTextReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/bank_reference_number"
            android:inputType="text"
            android:layout_marginTop="12dp" />

        <!-- Upload Screenshot -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_payment_screenshot"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />



        <!-- Pay It Button -->
        <Button
            android:id="@+id/buttonPayIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay It"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/UseBlue"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
